                        <TextBlock Text="{Binding HiddenDuplicates}" Grid.Column="2" Foreground="{DynamicResource TextBrush}"/>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>-->
    </Grid>
</UserControl>
